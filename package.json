{
  "name": "nanogen",
  "version": "0.4.3",
  "description": "Minimalist static site generator in Node.js",
  "repository": "doug2k1/nanogen",
  "keywords": [
    "static site generator"
  ],
  "author": "Douglas Matoso <dmatoso@outlook.com> (https://dmatoso.com)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "nanogen": "bin/run"
  },
  "directories": {
    "lib": "src",
    "bin": "bin"
  },
  "files": [
    "dist",
    "template",
    "bin"
  ],
  "scripts": {
    "build": "tsup-node",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "mocha --recursive",
    "test:coverage": "nyc --reporter=html --reporter=text npm run test",
    "test:ci": "nyc --reporter=lcov npm run test",
    "prettier": "prettier \"./{lib,test}/**/*.js\"",
    "prettier:check": "npm run prettier -- -l",
    "lint": "eslint \"./{lib,test}/**/*.js\"",
    "ci": "npm run lint && npm run prettier:check && npm run test:ci",
    "start": "tsx src/cli.ts",
    "site:start": "nanogen start",
    "site:build": "cross-env NODE_ENV=production nanogen build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "ejs": "^3.1.10",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.1",
    "live-server": "^1.2.2",
    "lodash.debounce": "^4.0.8",
    "marked": "^15.0.6",
    "meow": "^13.2.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/live-server": "^1.2.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/meow": "^5.0.0",
    "@types/node": "^22.10.5",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
