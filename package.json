{
  "name": "nanogen",
  "version": "0.4.3",
  "description": "Minimalist static site generator in Node.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doug2k1/nanogen.git"
  },
  "keywords": [
    "static site generator"
  ],
  "author": "Douglas Matoso <dmatoso@outlook.com> (https://dmatoso.com)",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "nanogen": "bin/run"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist",
    "template",
    "bin"
  ],
  "scripts": {
    "build": "tsup-node",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest --ci",
    "prettier": "prettier \"./{src,docs-src,template}/**/*.{js,ts,md,css,html}\"",
    "prettier:check": "npm run prettier -- -l",
    "lint": "eslint \"./{src,docs-src,template}/**/*\"",
    "ci": "npm run lint && npm run prettier:check && npm run test:ci",
    "start": "tsx src/cli.ts",
    "start:docs": "bin/run start",
    "build:docs": "cross-env NODE_ENV=production bin/run build"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.0.0",
    "ejs": "^3.1.10",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "live-server": "^1.2.2",
    "lodash.debounce": "^4.0.8",
    "marked": "^15.0.6",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/live-server": "^1.2.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/meow": "^6.0.0",
    "@types/node": "^22.10.6",
    "@vitest/coverage-v8": "^2.1.8",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-n": "^17.15.1",
    "globals": "^15.14.0",
    "nanogen": "^0.4.2",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "bugs": {
    "url": "https://github.com/doug2k1/nanogen/issues"
  },
  "homepage": "https://github.com/doug2k1/nanogen#readme"
}
